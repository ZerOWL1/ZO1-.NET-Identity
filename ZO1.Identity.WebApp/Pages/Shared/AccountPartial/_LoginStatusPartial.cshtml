
@*if user are not anonymous *@
@{
	System.Diagnostics.Debug.Assert(User.Identity != null, "User.Identity != null");
}
@if (User.Identity.IsAuthenticated)
{
	<form method="post" class="form-inline" asp-page="/Account/Logout">
		Welcome @User.Identity.Name (@User.Claims.FirstOrDefault(x => x.Type == "Position"));
		<button type="submit" class="ml-2 btn btn-link btn-outline-danger">
			Logout
		</button>
	</form>
}
@*if user are anonymous one *@
else
{
	<a class="btn btn-link btn-outline-info" asp-page="/Account/Login">Login</a>
}