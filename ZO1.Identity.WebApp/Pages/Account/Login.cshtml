@page
@model ZO1.Identity.WebApp.Pages.Account.LoginModel
@{
}
<p>
    <h3>User Login</h3>
</p>
<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All">
        </div>
        

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CredentialViewModel.Email" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="CredentialViewModel.Email"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CredentialViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="CredentialViewModel.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="CredentialViewModel.Password"></span>
        </div>
        
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="CredentialViewModel.RememberMe" 
                       class="form-check-input"/>
                <label class="form-check-label" asp-for="CredentialViewModel.RememberMe"></label>
            </div>
            <div class="col"></div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit"class="btn btn-success" value="Login"/>
                <a class="btn btn-primary" asp-page="/Account/Register">Register</a>
            </div>
            <div class="col-5">
            </div>
        </div>
        <br/>
        <p>
            Social Media Logins:
            <div class="form-group">
                @foreach (var provider in Model.ExternalLoginProviders)
                {
                    <button type="submit" name="provider" asp-page-handler="LoginExternally"
                            value="@provider.Name" class="btn btn-primary">
                        Login with @provider.DisplayName
                    </button>
                }
            </div>
        </p>
    </form>
</div>