@page
@model ZO1.Identity.WebApp.Pages.Account.UserProfileModel
@{
}

<p>
    <h1>User Profile</h1>
</p>

<div class="container border" style="padding: 20px">
    <form method="post" >
        <div class="text-danger" asp-validation-summary="All">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserProfileViewModel.Email" class="form-control" readonly=""/>
            </div>
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Email"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.Department"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserProfileViewModel.Department" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Department"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.Position"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UserProfileViewModel.Position" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Position"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit"class="btn btn-primary" value="Save"/>
            </div>
            <div class="col-4">
                <a asp-page="/Account/Authenticator" class="btn btn-success">Authenticator 2nd MFA</a>
            </div>
        </div>
    </form>
</div>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}

